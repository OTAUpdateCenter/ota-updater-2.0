<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings_title">

        <Preference
            android:title="@string/settings_account_title"
            android:summary="@string/settings_account_summary"
            android:key="account_pref" />

        <CheckBoxPreference
            android:title="@string/settings_notif_title"
            android:summaryOn="@string/settings_notif_summary_on"
            android:summaryOff="@string/settings_notif_summary_off"
            android:defaultValue="true"
            android:key="notif_pref" />

        <CheckBoxPreference 
            android:title="@string/settings_wifidl_title"
            android:summaryOn="@string/settings_wifidl_summary_on"
            android:summaryOff="@string/settings_wifidl_summary_off"
            android:defaultValue="true" 
            android:key="wifidl_pref" />
        
        <CheckBoxPreference 
            android:title="@string/settings_autodl_title"
            android:summaryOn="@string/settings_autodl_summary_on"
            android:summaryOff="@string/settings_autodl_summary_off"
            android:defaultValue="false"
            android:key="autodl_pref" />
        
        <Preference
            android:title="@string/settings_resetwarn_title"
            android:summary="@string/settings_resetwarn_summary"
            android:key="resetwarn_pref" />

    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/settings_support">
        
        <Preference 
            android:title="@string/settings_prokey_title" 
            android:summary="@string/settings_prokey_summary" 
            android:key="prokey_pref" />
        
        <Preference 
            android:title="@string/settings_donate_title"
            android:summary="@string/settings_donate_summary"
            android:key="donate_pref" />
        
    </PreferenceCategory>

</PreferenceScreen>
