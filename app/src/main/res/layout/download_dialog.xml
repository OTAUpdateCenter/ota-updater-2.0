<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dip">

        <TextView
            android:id="@+id/download_dlg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    
        <ProgressBar
            android:id="@+id/download_dlg_progress_bar"
            style="@style/ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_dlg_title" />
    
        <TextView
            android:id="@+id/download_dlg_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_dlg_progress_bar"
            android:layout_alignParentRight="true"
            android:gravity="right" />
    
        <TextView
            android:id="@+id/download_dlg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/download_dlg_progress_text"
            android:layout_marginTop="3dip"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/download_dlg_changelog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/download_dlg_status"
            android:layout_marginTop="3dip"
            android:text="@string/downloads_changelog_title" />

        <TextView
            android:id="@+id/download_dlg_changelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_dlg_changelog_title" />

    </RelativeLayout>
    
</ScrollView>